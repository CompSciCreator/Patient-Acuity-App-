<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">



    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.servlets.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- servlet for handling nurse information -->
    <servlet>
        <servlet-name>NurseInfoServlet</servlet-name>
        <servlet-class>com.example.servlets.NurseInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NurseInfoServlet</servlet-name>
        <url-pattern>/processNurseInfo</url-pattern>
    </servlet-mapping>

    <!-- Servlet for processing patient info -->
    <servlet>
        <servlet-name>SubmitPatientInfoServlet</servlet-name>
        <servlet-class>com.example.servlets.SubmitPatientInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SubmitPatientInfoServlet</servlet-name>
        <url-pattern>/submitPatientInfo</url-pattern>
    </servlet-mapping>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>Index.jsp</welcome-file>
    </welcome-file-list>



</web-app>
