<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!-- Servlet mapping for patientSearch.jsp -->
    <servlet>
        <servlet-name>PatientSearchServlet</servlet-name>
        <jsp-file>/patientSearch.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PatientSearchServlet</servlet-name>
        <url-pattern>/patientSearch</url-pattern>
    </servlet-mapping>

    <!-- Servlet mapping for nurseSearch.jsp -->
    <servlet>
        <servlet-name>NurseSearchServlet</servlet-name>
        <jsp-file>/nurseSearch.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>NurseSearchServlet</servlet-name>
        <url-pattern>/nurseSearch</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet mapping for nursePage.jsp -->
    <servlet>
        <servlet-name>NursePageServlet</servlet-name>
        <jsp-file>/nursePage.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>NursePageServlet</servlet-name>
        <url-pattern>/nursePage</url-pattern>
    </servlet-mapping>

    <!-- servlet for Login page -->
    <servlet>
        <servlet-name>Loginservlet</servlet-name>
        <servlet-class>com.example.servlets.Loginservlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Loginservlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- servlet for handling nurse information -->
    <servlet>
        <servlet-name>NurseInfoServlet</servlet-name>
        <servlet-class>com.example.servlets.NurseInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NurseInfoServlet</servlet-name>
        <url-pattern>/processNurseInfo</url-pattern>
    </servlet-mapping>

    <!-- Servlet for processing patient info -->
    <servlet>
        <servlet-name>SubmitPatientInfoServlet</servlet-name>
        <servlet-class>com.example.servlets.SubmitPatientInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SubmitPatientInfoServlet</servlet-name>
        <url-pattern>/submitPatientInfo</url-pattern>
    </servlet-mapping>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>
